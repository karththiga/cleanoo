<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textColor="#1A73E8"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in to continue"
            android:textSize="16sp"
            android:textColor="#5F6368"
            android:layout_marginBottom="25dp"/>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            app:tabMode="fixed"
            app:tabGravity="fill">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Household" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collector" />
        </com.google.android.material.tabs.TabLayout>

        <!-- CardView Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <!-- Email Field -->
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email Address"
                    android:padding="14dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#202124"
                    android:textColorHint="#9AA0A6"
                    android:background="@drawable/bg_input_blue"/>

                <!-- Password Field -->
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:padding="14dp"
                    android:layout_marginTop="16dp"
                    android:inputType="textPassword"
                    android:textColor="#202124"
                    android:textColorHint="#9AA0A6"
                    android:background="@drawable/bg_input_blue"/>

                <!-- Login Button -->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Login"
                    android:layout_marginTop="24dp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:backgroundTint="#1A73E8" />

                <!-- Forgot Password -->
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:textColor="#1A73E8"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Signup Redirect -->
        <TextView
            android:id="@+id/tvSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New here? Create an account"
            android:textColor="#1A73E8"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</ScrollView>
