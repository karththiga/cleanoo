<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvRedeemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem Points"
            android:textColor="#1F2937"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRedeemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Use your points for rewards and perks."
            android:textColor="#6B7280"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_card_white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward Earning"
                android:textColor="#111827"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Enter weight and waste type to see earned points"
                android:textColor="#6B7280"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_input_blue"
                android:hint="Weight (kg)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF" />

            <Spinner
                android:id="@+id/spWasteType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_blue"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnCalculateRewards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:backgroundTint="#6D4BB6"
                android:text="Calculate Reward"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvEarnedPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="#EEF2FF"
                android:padding="12dp"
                android:text="Earned Points: 0"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
