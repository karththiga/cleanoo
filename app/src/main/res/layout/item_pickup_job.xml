<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/tvItemWasteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waste Pickup"
            android:textColor="#111827"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Address"
            android:textColor="#6B7280"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvItemCollector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Collector"
            android:textColor="#6B7280"
            android:textSize="13sp" />



        <TextView
            android:id="@+id/tvItemLiveLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Live: Not shared"
            android:textColor="#1D4ED8"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvItemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pending"
            android:textColor="#F59E0B"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layoutCompletedActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnItemReview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Review"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnItemComplaint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FEE2E2"
                android:text="Raise complaint"
                android:textAllCaps="false"
                android:textColor="#991B1B" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvItemReviewSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#4B5563"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvItemComplaintSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#4B5563"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
