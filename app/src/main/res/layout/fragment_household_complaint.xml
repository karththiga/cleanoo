<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raise a complaint"
            android:textColor="#1F2A37"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:text="Tell us what went wrong with your pickup."
            android:textColor="#6B7280"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="#111827"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtHouseholdComplaintCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Delayed pickup, missed pickup, behavior..."
            android:background="@drawable/rounded_bg"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Details"
            android:textColor="#111827"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtHouseholdComplaintDetail"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_bg"
            android:gravity="top"
            android:hint="Share more information..."
            android:padding="12dp" />

        <Button
            android:id="@+id/btnSubmitHouseholdComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:backgroundTint="#FEE2E2"
            android:text="Submit complaint"
            android:textAllCaps="false"
            android:textColor="#991B1B" />

        <TextView
            android:id="@+id/tvHouseholdComplaintStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#6B7280" />
    </LinearLayout>
</ScrollView>
