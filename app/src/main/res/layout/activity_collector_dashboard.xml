<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarCollectorDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#DDEFE3"
        android:theme="@style/ThemeOverlay.Material3.Light"
        app:backgroundTint="#DDEFE3"
        app:navigationIconTint="#1F2A37"
        app:titleTextColor="#1F2A37"
        app:elevation="6dp"
        app:title="Hi there ðŸ‘‹" />

    <FrameLayout
        android:id="@+id/collectorDashboardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/collectorBottomNav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@color/nav_selector"
        app:itemTextAppearanceActive="@style/BottomNavTextAppearance"
        app:itemTextAppearanceInactive="@style/BottomNavTextAppearance"
        app:itemTextColor="@color/nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/collector_bottom_nav_menu" />
</LinearLayout>
