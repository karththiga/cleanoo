<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile_page"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================= PROFILE HEADER CARD ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/default_profile"
                    android:layout_marginEnd="12dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/profile_primary"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textColor="@color/profile_primary"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user@gmail.com"
                        android:textColor="@color/profile_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ================= MENU CARD ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <!-- Edit Profile -->
                <LinearLayout
                    android:id="@+id/btnEditProfile"
                    style="@style/ProfileRowStyle">

                    <ImageView
                        android:src="@drawable/baseline_person_24"
                        style="@style/ProfileRowIcon"
                        app:tint="@color/profile_primary" />

                    <TextView
                        android:text="Edit Profile"
                        style="@style/ProfileRowText" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="›"
                        style="@style/ProfileRowChevron" />
                </LinearLayout>

                <View
                    style="@style/ProfileDivider" />

                <!-- Phone -->
                <LinearLayout
                    android:id="@+id/btnPhone"
                    style="@style/ProfileRowStyle">

                    <ImageView
                        android:src="@drawable/baseline_contact_phone_24"
                        style="@style/ProfileRowIcon"
                        app:tint="@color/profile_primary" />

                    <TextView
                        android:text="Phone Number"
                        style="@style/ProfileRowText" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="›"
                        style="@style/ProfileRowChevron" />
                </LinearLayout>

                <View
                    style="@style/ProfileDivider" />

                <!-- Change Password -->
                <LinearLayout
                    android:id="@+id/btnChangePassword"
                    style="@style/ProfileRowStyle">

                    <ImageView
                        android:src="@drawable/baseline_lock_24"
                        style="@style/ProfileRowIcon"
                        app:tint="@color/profile_primary" />

                    <TextView
                        android:text="Change Password"
                        style="@style/ProfileRowText" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="›"
                        style="@style/ProfileRowChevron" />
                </LinearLayout>

                <View
                    style="@style/ProfileDivider" />

                <!-- Inbox -->
                <LinearLayout
                    android:id="@+id/btnInbox"
                    style="@style/ProfileRowStyle">

                    <ImageView
                        android:src="@drawable/baseline_circle_notifications_24"
                        style="@style/ProfileRowIcon"
                        app:tint="@color/profile_primary" />

                    <TextView
                        android:text="Inbox"
                        style="@style/ProfileRowText" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="›"
                        style="@style/ProfileRowChevron" />
                </LinearLayout>

                <View
                    style="@style/ProfileDivider" />

                <!-- Logout -->
                <LinearLayout
                    android:id="@+id/btnLogout"
                    style="@style/ProfileRowStyle">

                    <ImageView
                        android:src="@drawable/baseline_logout_24"
                        style="@style/ProfileRowIcon"
                        app:tint="@color/profile_danger" />

                    <TextView
                        android:text="Logout"
                        android:textColor="@color/profile_danger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="›"
                        android:textColor="@color/profile_danger"
                        style="@style/ProfileRowChevron" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ======================= EXPANDABLE SECTIONS ======================= -->

        <!-- Edit Profile -->
        <LinearLayout
            android:id="@+id/sectionEditProfile"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card_white">

            <EditText
                android:id="@+id/edtName"
                android:hint="Full Name"
                android:padding="12dp"
                android:background="@drawable/bg_input_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnSaveProfile"
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Phone -->
        <LinearLayout
            android:id="@+id/sectionPhone"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card_white">

            <EditText
                android:id="@+id/edtPhone"
                android:hint="Phone Number"
                android:inputType="phone"
                android:background="@drawable/bg_input_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSavePhone"
                android:text="Save Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Password -->
        <LinearLayout
            android:id="@+id/sectionPassword"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card_white">

            <EditText
                android:id="@+id/edtPassword"
                android:hint="New Password"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSavePassword"
                android:text="Update Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Inbox -->
        <LinearLayout
            android:id="@+id/sectionInbox"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card_white">

            <TextView
                android:text="You have no new messages."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/profile_secondary" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
