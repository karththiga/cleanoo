<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="96dp">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, User ðŸ‘‹"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A73E8"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/bg_loyalty_card">

                    <TextView
                        android:id="@+id/tvPointsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Points"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#E3F2FD"/>

                    <TextView
                        android:id="@+id/tvTotalPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Points"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tvTier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silver Member"
                        android:textSize="14sp"
                        android:textColor="#E3F2FD"
                        android:layout_marginTop="4dp"/>

                    <ProgressBar
                        android:id="@+id/progressTier"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="18dp"
                        android:progress="60"
                        android:progressTint="#FFFFFF"
                        android:progressBackgroundTint="#80FFFFFF" />

                    <TextView
                        android:id="@+id/tvExpiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points expire on: 25 Dec 2025"
                        android:textSize="12sp"
                        android:textColor="#E3F2FD"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Requests"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="#1E1E1E"/>

            <ProgressBar
                android:id="@+id/progressRecentRequests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRecentRequestsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No recent requests"
                android:textColor="#6B7280"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutRecentRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Announcements"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:textColor="#1E1E1E"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAnnouncements"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:clipToPadding="false"
                android:paddingEnd="10dp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRequestPickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:contentDescription="Request pickup"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="#1A73E8"
        app:tint="#FFFFFF" />

</FrameLayout>
