<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/tvCollectorJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Household"
            android:textColor="#111827"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCollectorJobMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pickup: Waste â€¢ 0kg"
            android:textColor="#6B7280" />

        <TextView
            android:id="@+id/tvCollectorJobStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pending"
            android:textColor="#1D4ED8"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCollectorJobPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Picked up"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
