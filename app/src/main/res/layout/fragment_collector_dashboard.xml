<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF3F8"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collector Home"
            android:textColor="#0F172A"
            android:textSize="@dimen/collector_dashboard_title_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Manage jobs, route updates, evidence, and completion smoothly"
            android:textColor="#64748B"
            android:textSize="@dimen/collector_dashboard_body_text_size" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivCollectorHero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="waste collection"
                    android:scaleType="centerCrop" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:text="Announcements"
            android:textColor="#0F172A"
            android:textSize="@dimen/collector_dashboard_highlight_text_size"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCollectorAnnouncements"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:clipToPadding="false"
            android:paddingEnd="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Jobs"
                    android:textColor="#0F172A"
                    android:textSize="@dimen/collector_dashboard_card_title_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAssignedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0 pending"
                    android:textColor="#2563EB"
                    android:textSize="@dimen/collector_dashboard_metric_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCollectorIncomingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No active jobs right now"
                    android:textColor="#64748B"
                    android:textSize="@dimen/collector_dashboard_body_text_size" />

                <TextView
                    android:id="@+id/tvActiveJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="No active pickup"
                    android:textColor="#111827"
                    android:textSize="@dimen/collector_dashboard_highlight_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvActiveJobMeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="New assigned jobs will appear here"
                    android:textColor="#64748B"
                    android:textSize="@dimen/collector_dashboard_meta_text_size" />

                <Button
                    android:id="@+id/btnPrimaryAction"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#1F8C3A"
                    android:text="Start route"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/collector_dashboard_button_primary_text_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnViewJobDetails"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#166534"
                    android:text="View job details"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/collector_dashboard_button_secondary_text_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layoutCollectorCompletedActions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnCollectorReview"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:backgroundTint="#2E7D32"
                        android:text="Review"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnCollectorComplaint"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FEE2E2"
                        android:text="Raise complaint"
                        android:textAllCaps="false"
                        android:textColor="#991B1B"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvCollectorAnnouncementsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="10dp"
            android:text="Announcements"
            android:textColor="#0F172A"
            android:textSize="@dimen/collector_dashboard_section_title_text_size"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCollectorAnnouncements"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:clipToPadding="false"
            android:paddingEnd="10dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/ivCollectorGalleryOne"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="garbage collection"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/ivCollectorGalleryTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="recycling truck"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
